<p id="notice"><%= notice %></p>

<h1 align='center'>Music Collection List</h1>
<h3 align='center'><%= link_to 'Create New Music Collection', new_manager_path %><h3>
<table border='1px' align='center' >
  <thead>
    <tr>
      <th style='padding:15px'><h3>Name</h3></th>
      <th style='padding:15px'><h3>Format </h3></th>
      <th style='padding:15px'><h3>Length (hh:ss) </h3></th>
      <th colspan=2 style='padding:15px'><h3>Size </h3></th>
      <th colspan=3 style='padding:15px'><h3>Modify </h3></th>
    </tr>
  </thead>

  <tbody>
    <% @managers.each do |manager| %>
      <tr>
        <td style='padding:15px'><%= manager.name %></td>
        <td style='padding:15px'><%= manager.format %></td>
        <td style='padding:15px'><%= manager.length %></td>
        <td style='padding:15px' colspan=2><%= manager.size %>
        <%= manager.sizeDescription %></td>
        <td style='padding:15px'><%= link_to 'Show', manager %></td>
        <td style='padding:15px'><%= link_to 'Edit', edit_manager_path(manager) %></td>
        <td style='padding:15px'><%= link_to 'Destroy', manager, method: :delete, data: { confirm: 'Are you sure you want to destroy the record?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
